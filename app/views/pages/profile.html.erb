<div class="row">
    <div class="col-xs-3">
      <div class="col-sm-12" style="margin-top: -200px;">
            <img src="/nectar.jpg" height="200px" width="200px" class="rounded-img">
      </div>
      <div class="col-sm-12">
        <h3 style="font-weight: bold;"><%= params[:id] %></h3>
        <p>
          Hi my name is DJ
        </p>
      </div>
